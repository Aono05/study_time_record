<div class="container">
  <h1 class="my-4">新しい勉強時間の記録</h1>

  <% if flash[:alert].present? %>
    <div class="alert alert-danger" role="alert">
      <%= flash[:alert] %>
    </div>
  <% end %>

  <%= form_with(model: @study_time, local: true, class: "my-form") do |form| %>
    <% if @study_time.errors.any? %>
      <div class="alert alert-danger" role="alert">
        <h4><%= pluralize(@study_time.errors.count, "error") %> が発生しました。</h4>

        <ul>
          <% @study_time.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :started_at, "開始時間" %>：
      <%= form.datetime_local_field :started_at, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :ended_at, "終了時間" %>：
      <%= form.datetime_local_field :ended_at, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :memo, "Memo" %>：
      <%= form.text_area :memo, rows: 4, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.submit "登録する", class: "btn btn-primary" %>
    </div>
  <% end %>

  <%= link_to '一覧に戻る', study_times_path, class: "btn btn-secondary mt-3" %>
</div>
