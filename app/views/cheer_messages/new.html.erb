  <h1>新しい応援メッセージの作成</h1>

  <% if flash[:alert].present? %>
    <div class="flash alert">
      <%= flash[:alert] %>
    </div>
  <% end %>

  <%= form_with(model: @cheer_message, local: true) do |form| %>
    <% if @cheer_message.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@cheer_message.errors.count, "error") %> が発生しました。</h2>

        <ul>
          <% @cheer_message.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :content %>：
      <%= form.text_area :content, row: 2 %>
    </div>
    <div>
      <%= form.submit "登録する" %>
    </div>
  <% end %>

  <%= link_to '一覧に戻る', cheer_messages_path %>
