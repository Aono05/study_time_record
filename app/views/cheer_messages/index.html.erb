<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cheer_messages.each do |cheer_message| %>
      <tr>
        <td><%= cheer_message.content %></td>
        <td><%= cheer_message.decorate.uploaded_image_status %></td>
        <td><%= link_to '詳細', cheer_message %></td>
        <td><%= link_to '編集', edit_cheer_message_path(cheer_message) %></td>
        <td><%= link_to '削除', cheer_message, method: :delete, data: { confirm: '本当に削除しますか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

