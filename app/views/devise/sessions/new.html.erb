<div class="box">
  <div class="box-inner">
    <div class="logo">
      <%= image_tag "study_time_logo.png", alt: "StudyTime Logo" %>
    </div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <h1>ログイン</h1>
      <div class="box-email">
        <%= f.label :email, "Eメール" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true %>
      </div>

      <div class="box-password">
        <div class="a-row">
          <div class="column-left">
            <%= f.label :password, "パスワード" %>
          </div>
          <div class="column-right">
            <%= link_to "パスワードを忘れた場合", new_user_password_path %>
          </div>
        </div>
        <%= f.password_field :password, autocomplete: "current-password", required: true %>
      </div>

      <div class="box-login">
        <%= f.submit "ログイン", class: "btn" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="remember">
          <%= f.check_box :remember_me %>
          <%= f.label :remember, "ログインしたままにする" %>
        </div>
      <% end %>
    <% end %>

    <div class="box-newusr">
      <%= link_to "新規登録", new_user_registration_path, class: "btn" %>
    </div>
  </div>
</div>
